<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.study.pizzaapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PizzaApp">
        <activity android:name=".Mashroom_pizza"
            android:label="Ветчина и грибы">
            <intent-filter>
                <action android:name="com.study.pizzaapp.Mashroom_pizza" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Fresh_pizza"
            android:label="Пепперони Фреш">
            <intent-filter>
                <action android:name="com.study.pizzaapp.Fresh_pizza" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Four_season"
            android:label="Четыре сезона">
            <intent-filter>
                <action android:name="com.study.pizzaapp.Four_season" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Chees_pizza"
            android:label="Сырная">
            <intent-filter>
                <action android:name="com.study.pizzaapp.Chees_pizza" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Carbonara"
            android:label="Карбонара">
            <intent-filter>
                <action android:name="com.study.pizzaapp.Carbonara" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ZakazActivity"
            android:label="@string/zakaz">
            <intent-filter>
                <action android:name="com.study.pizzaapp.ZakazActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterWindow"
            android:label="@string/action_register">
            <intent-filter>
                <action android:name="com.study.pizzaapp.RegisterWindow" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BasketActivity"
            android:label="@string/login_basket">
            <intent-filter>
                <action android:name="com.study.pizzaapp.BasketActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="com.study.pizzaapp.ui.login.LoginActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PizzaApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>