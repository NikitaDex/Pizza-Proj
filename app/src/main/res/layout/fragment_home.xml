<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:id="@+id/relaone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/carb_view"
            android:layout_width="350sp"
            android:layout_height="180sp"
            android:layout_marginTop="30sp"
            android:onClick="carb_btn"
            android:layout_marginHorizontal="30sp"
            android:src="@drawable/carbonara"

            />
        <ImageButton
            android:id="@+id/cheese_view"
            android:layout_marginTop="30sp"
            android:layout_below="@+id/carb_view"
            android:layout_width="350sp"
            android:layout_height="180sp"
            android:onClick="chees_btn"
            android:layout_marginHorizontal="30sp"
            android:src="@drawable/cheese"
            />

        <ImageButton
            android:id="@+id/fresh_view"
            android:layout_marginTop="30sp"
            android:layout_below="@+id/cheese_view"
            android:layout_width="350sp"
            android:layout_height="180sp"
            android:onClick="fresh_btn"
            android:layout_marginHorizontal="30sp"
            android:src="@drawable/pepperoni_fresh"
            />

        <ImageButton
            android:id="@+id/mash_view"
            android:layout_marginTop="30sp"
            android:layout_below="@+id/fresh_view"
            android:layout_width="350sp"
            android:layout_height="180sp"
            android:onClick="mash_btn"
            android:layout_marginHorizontal="30sp"
            android:src="@drawable/ham_and_mushrooms" />

        <ImageButton
            android:id="@+id/four_view"
            android:layout_marginTop="30sp"
            android:layout_below="@+id/mash_view"
            android:layout_width="350sp"
            android:layout_height="180sp"
            android:onClick="four_season_btn"
            android:layout_marginHorizontal="30sp"
            android:src="@drawable/four_seasons" />


    <TextView
        android:id="@+id/text_home"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="419dp"
        android:layout_marginBottom="557dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />
    </RelativeLayout>
</ScrollView>